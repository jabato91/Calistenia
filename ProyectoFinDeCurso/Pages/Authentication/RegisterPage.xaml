<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinDeCurso.Pages.Authentication.RegisterPage"
             Title="RegisterPage">
    <VerticalStackLayout>
        <Entry x:Name="nameRegister"
            Placeholder="Introduce nombre"
            TextColor="#4D4040"/>
        <Entry x:Name="firstSurname"
            Placeholder="Introduce primer apellido"
            TextColor="#4D4040"/>
        <Entry x:Name="SecondSurname"
            Placeholder="Introduce segundo apellido"
            TextColor="#4D4040"/>
        <Entry x:Name="email"
            Placeholder="Introduce correo electrónico"
            TextColor="#4D4040"/>
        <Entry x:Name="checkEmail"
            Placeholder="Introduce correo de nuevo"
            TextColor="#4D4040"/>
        <Entry x:Name="Password"
            Placeholder="Introduce una contraseña"
            TextColor="#4D4040"
             />
        <Entry x:Name="phone"
            Placeholder="Introduce teléfono movil"
            TextColor="#4D4040"
            Keyboard="Numeric"/>
        <Button Text="registrarse" Clicked="RegisterUser"/>
    </VerticalStackLayout>
</ContentPage>